

{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "iCampus": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/tamilrise",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": false,
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/assets/js/bundles/rangeSlider/css/ion.rangeSlider.css",
              "node_modules/angular-archwizard/archwizard.css",
              "src/assets/js/bundles/rangeSlider/css/ion.rangeSlider.skinFlat.css",
              "src/assets/js/bundles/lightgallery/dist/css/lightgallery.min.css",
              "src/assets/js/bundles/bootstrap-colorpicker/dist/css/bootstrap-colorpicker.css",
              "src/assets/scss/style.scss",
              "src/assets/scss/theme/all-themes.scss",
              "src/styles.scss"
            ],
            "scripts": [
              "src/assets/js/app.min.js",
              "src/assets/js/admin.js",
              "src/assets/js/table.min.js",
              "src/assets/js/chart.min.js",
              "src/assets/js/bundles/export-tables/pdfmake.min.js",
              "src/assets/js/bundles/datamaps/d3.min.js",
              "src/assets/js/bundles/echart/echarts.js",
              "src/assets/js/bundles/apexcharts/apexcharts.min.js",
              "src/assets/js/bundles/datamaps/d3.min.js",
              "src/assets/js/bundles/datamaps/topojson.min.js",
              "src/assets/js/bundles/datamaps/datamaps.world.min.js"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "20mb",
                  "maximumError": "50mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "20mb",
                  "maximumError": "50mb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "iCampus:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "iCampus:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "iCampus:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.app.json",
              "tsconfig.spec.json",
              "e2e/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "iCampus:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "iCampus:serve:production"
            }
          }
        }
      }
    }},
  "defaultProject": "iCampus"
}
